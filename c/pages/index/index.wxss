.content{
  font-family: "Microsoft YaHei";
}
.bg{
  width: 100%;
  height: 320px;
  background-color: #FA2A43;
  text-align: center;
}
.logo{
  margin-top: 40px;
  border-radius: 50%;
}
.search{
  height: 40px;
  width: 96%;
  background-color: #ffffff;
  margin: 0 auto;
  margin-top:30px;
  border-radius: 50px;
  line-height: 40px;
}
.search view{
  text-align: center;
  width: 100%;
  font-size: 15px;
  color: #999999;
}
.title{
  padding:10px;
  font-size: 13px;
  color: #999999;
}
.items{
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
}
.item{
  border: 1px solid #47C1C4;
  width: 47%;
  height: 83px;
  margin: 0 auto;
  border-radius: 5px;
}
.priceInfo{
  display: flex;
  flex-direction: row;
  padding:5px;
}
.price{
  width:40%;
  line-height: 40px;
  color: #47C1C4;
}
.type{
  font-size: 15px;
  color: #47C1C4;
}
.rmb{
  font-size: 13px;
}
.count{
  font-size: 20px;
}
.desc{
  font-size: 12px;
  background-color:  #47C1C4;
  height: 30px;
  color: #ffffff;
  text-align: center;
  line-height: 30px;
}